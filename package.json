    "bcryptjs": "^2.4.3",
    "concurrently": "^4.1.0",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-graphql": "^0.7.1",
    "graphql": "^14.1.1",
    "gridfs-stream": "^1.1.1",
    "jsonwebtoken": "^8.4.0",
    "method-override": "^3.0.0",
    "mongoose": "^5.4.9",
    "multer": "^1.4.1",
    "multer-gridfs-storage": "^3.2.3",
    "node-sass-chokidar": "^1.3.4",
    "validator": "^10.11.0"
  },
